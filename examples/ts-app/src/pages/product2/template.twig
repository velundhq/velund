{% extends "BaseLayout" %}
{% block content %}
	<div class="max-w-6xl mx-auto pt-12">
		<div class="flex flex-col md:flex-row">
			<div class="md:flex-1 px-4">
				<div class="h-[460px] rounded-lg  mb-4">
					<img class="w-full h-full object-cover" src="{{image}}" alt="Product Image">
				</div>
				<div class="flex -mx-2 mb-4">
					<div class="w-1/2 px-2">
						<cart-button :id="{{id}}"/>
					</div>
				</div>
			</div>
			<div class="md:flex-1 px-4">
				<h2 class="text-2xl font-bold text-gray-800  mb-2">{{title}}</h2>
				<p class="text-gray-600  text-sm mb-4">
					{{category}}</p>
				<div class="flex mb-4">
					<div class="mr-4">
						<span class="font-bold text-gray-700 ">Price:</span>
						<span class="text-gray-600 ">${{price}}</span>
					</div>
					<div>
						<span class="font-bold text-gray-700 ">Availability:</span>
						<span class="text-gray-600 ">{{rating.count}}</span>
					</div>
				</div>

				<div>
					<span class="font-bold text-gray-700 ">Product Description:</span>
					<p class="text-gray-600 text-sm mt-2 whitespace-pre-wrap">
						{{description}}
					</p>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
